{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "jozef-lang",
  "scopeName": "source.jlang",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#variables" },
    { "include": "#numbers" },
    { "include": "#strings" },
    { "include": "#comments" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.jozef-lang",
          "match": "\\b(if|while|for|return|let|fn)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.jozef-lang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.jozef-lang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.jozef-lang",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.jozef-lang",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.jozef-lang",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.jozef-lang",
          "match": "//.*$"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        { "name": "punctuation.section.block.jozef-lang", "match": "[{}]" },
        { "name": "punctuation.terminator.statement.jozef-lang", "match": ";" },
        { "name": "punctuation.separator.parameter.jozef-lang", "match": "\\(" },
        { "name": "punctuation.separator.parameter.jozef-lang", "match": "\\)" }
      ]
    }
  }
}